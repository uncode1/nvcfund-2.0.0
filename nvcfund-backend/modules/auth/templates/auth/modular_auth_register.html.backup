<script>
// Show specific form based on account type
function showForm(accountType) {
    // Hide account type selection
    document.getElementById('accountTypeSelection').style.display = 'none';
    document.getElementById('loginLink').style.display = 'none';
    
    // Hide all forms
    document.getElementById('individualForm').style.display = 'none';
    document.getElementById('businessForm').style.display = 'none';
    document.getElementById('partnerForm').style.display = 'none';
    
    // Show selected form
    switch(accountType) {
        case 'USER':
            document.getElementById('individualForm').style.display = 'block';
            break;
        case 'BUSINESS_USER':
            document.getElementById('businessForm').style.display = 'block';
            break;
        case 'PARTNER':
            document.getElementById('partnerForm').style.display = 'block';
            break;
    }
}

// Go back to account type selection
function backToSelection() {
    // Show account type selection
    document.getElementById('accountTypeSelection').style.display = 'block';
    document.getElementById('loginLink').style.display = 'block';
    
    // Hide all forms
    document.getElementById('individualForm').style.display = 'none';
    document.getElementById('businessForm').style.display = 'none';
    document.getElementById('partnerForm').style.display = 'none';
}

// Form validation for all forms
function validateForm(formId) {
    const form = document.getElementById(formId);
    const password = form.querySelector('input[name="password"]').value;
    const requiredFields = form.querySelectorAll('[required]');
    
    // Check required fields
    for (let field of requiredFields) {
        if (!field.value.trim()) {
            alert(`Please fill in the ${field.name.replace('_', ' ')} field`);
            field.focus();
            return false;
        }
    }
    
    // Password validation
    if (password.length < 8) {
        alert('Password must be at least 8 characters long');
        return false;
    }
    
    return true;
}

// Add event listeners to all forms
document.addEventListener('DOMContentLoaded', function() {
    // Individual form validation
    document.getElementById('individualForm').addEventListener('submit', function(e) {
        if (!validateForm('individualForm')) {
            e.preventDefault();
        }
    });
    
    // Business form validation
    document.getElementById('businessForm').addEventListener('submit', function(e) {
        if (!validateForm('businessForm')) {
            e.preventDefault();
        }
    });
    
    // Partner form validation
    document.getElementById('partnerForm').addEventListener('submit', function(e) {
        if (!validateForm('partnerForm')) {
            e.preventDefault();
        }
    });
});
</script>

